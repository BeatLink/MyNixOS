# FileSystems #############################################################################################################################
#
# Specifies the Filesystem Layout
#
###########################################################################################################################################

{ config, lib, pkgs,  ... }:
{
    fileSystems."/" = {                                                             # Specifies the Root FS
        device = "/dev/disk/by-uuid/44444444-4444-4444-8888-888888888888";
        fsType = "ext4";
    };
    swapDevices = [ ];                                                              # Disables Swap
}

